<div class="container">  
  <div class="event">
    <h1 class="hero hero--inline">
      (<%= @event.location %>) <%= @event.title %>
    </h1>
    <p class="event__description">
      <%= @event.description %>
    </p>
    <div class="event__participants">
      <h1>Participants</h1>
      <div class="event__participant event__participant--owner">
        <h1><%= @event.owner.nick %></h1>
        <h2>Owner of the event</h2>
      </div>
      <div class="event__participant">
        <h1>Bunyos Pityu</h1>
      </div>
      <div class="event__participant">
        <h1>Makiverem</h1>
      </div>
    </div>
  </div>
</div>
